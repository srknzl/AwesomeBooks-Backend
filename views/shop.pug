extends layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/styles/shop.css")

block content
  h1.text_center My products:
  h3.text_center List of all the products
  if prods.length > 0
    .grid
      each product in prods 
        article(class="card product-item")
          header.card__header
            h1.product__title #{product.title}
          .card__image
            img(src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png", alt="A Book", srcset="")
          .card__content
            h2.product__price $19.99
            p.product__description A very interesting book about so many even more interesting things!
          .card__actions
            button.btn Add to Cart
  else
    p.text_center: b No products exist yet